<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Jamper Financial | @pageTitle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="_content/Jamper-Financial.Shared/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="_content/Jamper-Financial.Shared/app.css" />
    <link rel="stylesheet" href="Jamper-Financial.Web.styles.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.8/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.2.0"></script>
    <script>
        function openInNewTab(url) {
            var win = window.open();
            win.document.write('<iframe src="' + url + '" frameborder="0" style="border:0; top:0; left:0; bottom:0; right:0; width:100%; height:100%;" allowfullscreen></iframe>');
        }
    </script>
    <script src="_content/Jamper-Financial.Shared/js/scripts.js"></script>
    <script type="module" src="_content/Jamper-Financial.Shared/js/firebase-auth.js"></script>
    <link rel="icon" type="image/png" href="_content/Jamper-Financial.Shared/favicon.png" />
    <HeadOutlet @rendermode="InteractiveServer" />

    @* <script src="_content/Blazor.Bootstrap/blazor.bootstrap.js"></script> *@
    @* <link rel="stylesheet" href="_content/Jamper-Financial.Shared/bootstrap/bootstrap.min.css" /> *@
    @* <link rel="stylesheet" href="_content/Jamper-Financial.Shared/app.css" /> *@
    @* <link rel="stylesheet" href="Jamper-Financial.Web.styles.css" /> *@
    @* <link rel="icon" type="image/png" href="_content/Jamper-Financial.Shared/favicon.png" /> *@
    @* <HeadOutlet @rendermode="InteractiveServer" /> *@
</head>

<body>
    <CascadingValue Value="pageTitle">
        <CascadingValue Value="SetPageTitle">
            <Routes @rendermode="InteractiveServer" />
        </CascadingValue>
    </CascadingValue>
    <script src="js/chart-interop.js"></script>
    <script src="_framework/blazor.web.js"></script>
</body>

</html>

@code {
    private string pageTitle = "Home";

    private void SetPageTitle(string title)
    {
        pageTitle = title;
        StateHasChanged();
    }
}
