@page "/verify-email"

<div class="verification-container">
    <div class="verification-left">
        <h1>JAMPER Finance</h1>
        <div class="verification-form">
            <h2>Verify your Email</h2>
            <p>
                <input id="email" type="email" @bind="Email" placeholder="Enter your email" />
            </p>
            <p>The link is valid for 10 minutes</p>
            <a href="#" class="resend-link">Resend Code</a>

            <div class="verification-buttons">
                <button type="button" class="verify-button" @onclick="OnVerifyEmailClick">Verify</button>
                <button type="button" class="back-button" @onclick="NavigateToCreateAccount">Back</button>
            </div>
        </div>
    </div>
    <div class="verification-right">
        <img src="images/logo.png" alt="Jamper Logo" />
    </div>
</div>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; }

    private string Email { get; set; } = string.Empty;

    private void NavigateToCreateAccount()
    {
        Navigation.NavigateTo("/create-account");
    }

    private void OnVerifyEmailClick()
    {
        // Simulate email verification process
        Console.WriteLine($"Verification email sent to: {Email}");
    }
}